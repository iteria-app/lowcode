{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "esm",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "esm",
    "__tests__"
  ]
}